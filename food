#!/bin/bash

# Script centralizador para o projeto Food Core API
# Uso: ./food [comando] [opções]

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SCRIPTS_DIR="$SCRIPT_DIR/scripts"

# Função de ajuda
show_help() {
  echo "Food Core API - CLI"
  echo
  echo "Uso: ./food [comando] [opções]"
  echo
  echo "Comandos disponíveis:"
  echo "  start:app      Inicia a aplicação"
  echo "  stop:app       Para a aplicação"
  echo "  restart:app    Reinicia a aplicação"
  echo "  db:up          Aplica migrações no banco"
  echo "  db:reset       Reseta o banco de dados"
  echo "  help           Exibe esta ajuda"
  echo
  echo "Opções:"
  echo "  --build, -b    Reconstrói as imagens antes de iniciar"
  echo "  --force, -f    Força execução sem confirmação"
  echo
  echo "Exemplo:"
  echo "  ./food start:app --build"
}

# Verifica se Docker está ativo
check_docker() {
  docker info &>/dev/null
  return $?
}

if ! check_docker; then
  echo "ERRO: O Docker não está rodando."
  echo "Inicie o Docker Desktop e tente novamente."
  exit 1
fi

# Nenhum argumento → ajuda
if [ $# -eq 0 ]; then
  show_help
  exit 1
fi

# Processar opções
BUILD_FLAG=""
FORCE_FLAG=""
COMMAND=""

while [[ $# -gt 0 ]]; do
  case $1 in
    --build|-b)
      BUILD_FLAG="--build"
      shift
      ;;
    --force|-f)
      FORCE_FLAG="--force"
      shift
      ;;
    *)
      COMMAND="$1"
      shift
      ;;
  esac
done

# Executar comandos
case "$COMMAND" in
  start:app)
    echo "Iniciando a aplicação..."
    "$SCRIPTS_DIR/app-up.sh" $BUILD_FLAG
    ;;

  stop:app)
    echo "Parando a aplicação..."
    "$SCRIPTS_DIR/app-down.sh"
    ;;

  restart:app)
    echo "Reiniciando a aplicação..."
    "$SCRIPTS_DIR/app-restart.sh" $BUILD_FLAG
    ;;

  db:up)
    echo "Aplicando migrações..."
    "$SCRIPTS_DIR/apply-migrations.sh"
    ;;

  db:reset)
    if [ "$FORCE_FLAG" != "--force" ]; then
      read -p "ATENÇÃO: Isso irá resetar o banco de dados. Tem certeza? (s/n): " resp
      if [[ ! "$resp" =~ ^[Ss]$ ]]; then
        echo "Operação cancelada."
        exit 0
      fi
    fi
    echo "Resetando o banco de dados..."
    "$SCRIPTS_DIR/reset-db.sh"
    ;;

  help)
    show_help
    ;;

  *)
    echo "ERRO: Comando desconhecido '$COMMAND'"
    echo "Use './food help' para ver os comandos disponíveis."
    exit 1
    ;;
esac