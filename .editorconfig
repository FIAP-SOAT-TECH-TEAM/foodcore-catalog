root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = tab
indent_size = 4
continuation_indent_size = 8
max_line_length = 120
# Configurações para melhor legibilidade
ij_java_method_parameters_wrap = chop_down_if_long
ij_java_method_call_chain_wrap = chop_down_if_long
ij_java_method_parameters_lparen_on_next_line = false
ij_java_method_parameters_rparen_on_next_line = false
ij_java_call_parameters_wrap = chop_down_if_long
ij_java_call_parameters_lparen_on_next_line = false
ij_java_call_parameters_rparen_on_next_line = false
ij_java_binary_operation_wrap = chop_down_if_long
ij_java_binary_operation_sign_on_next_line = false
ij_java_ternary_operation_wrap = chop_down_if_long
ij_java_ternary_operation_signs_on_next_line = false
ij_java_for_statement_wrap = chop_down_if_long
ij_java_array_initializer_wrap = chop_down_if_long

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,js,ts}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false
